@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Confirmation on Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body style=" margin: 0; background-color: #f2f2f2; font-size: 12px; font-family: century gothic; color: #666;">
    <div style="background-color:#ffffff; padding-bottom:10%;">
        <a href="http://fyp2015.com.violet.arvixe.com" target="_blank"><img style="padding-top: 19px; margin-left: auto; margin-right: auto; display: block;" src="http://i60.tinypic.com/117z8ep.jpg" /></a>
        </a>
    </div>
    <div id="body" style="max-width:709px; width:60%; background-color:#ffffff; padding-left:45px; padding-right:45px; padding-top:30px; padding-bottom:30px; margin-top:10%; margin-left: auto; margin-right: auto; box-shadow:0px 0px 11px #7a7b7c; z-index:10; position:relative;">
        <h1 style="text-decoration: underline; text-align: center; padding-bottom: 5%; font: inherit; font-size: 22px; color: #000;">EMAIL VERIFICATION</h1>
        <p>Hi @ViewBag.PersonName,</p>
        Please click on the <a href="@ViewBag.RegisterLink">link</a> to complete the registration process.
        <br />
        The token is only valid for 30 minutes, please click the link below to request for another token:
        <br /><br />
        Enjoy Shopping,
        <br /><br />
        fyp2015.com
        <br /><br />
        <div class="body-footer" style="border-top-style:solid; border-top-color:#D8D8D8; border-top-width: 1px; padding-left: 50%;">
            If you received this email by mistake, please let us know: <br />
            <a href="mailto:admin@fyp2015.violet.arvixe.com?subject=Bug Report: Wrong Email Destination">
                admin@fyp2015.violet.arvixe.com
            </a>
        </div>
    </div>
    <div style="padding-top:10%; text-align: center; bottom: 10px; position:fixed; z-index:1;">
        <div style="position:relative; width:100%; ">
            <ul style="display:inline-block; padding:0; list-style-type:none;">
                <li style="float:left; margin:10px;"><a href="#" target="_blank"><img src="http://i58.tinypic.com/15cofba.jpg" border="0" alt="Facebook Group" /></a></li>
                <li style="float:left; margin:10px;"><a href="#" target="_blank"><img src="http://i59.tinypic.com/2mcdm3c.jpg" border="0" alt="Instagram Group" /></a></li>
                <li style="float:left; margin:10px;"><a href="#" target="_blank"><img src="http://i59.tinypic.com/2yzbt03.jpg" border="0" alt="Twitter Group" /></a></li>
            </ul><br />
            <label>Copyright fyp2015.com 2014, All Rights Reserved</label>
        </div>

    </div>
</body>




</html>
