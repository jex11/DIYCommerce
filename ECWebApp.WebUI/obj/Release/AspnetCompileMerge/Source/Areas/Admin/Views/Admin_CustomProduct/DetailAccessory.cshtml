                url: "/Admin/Admin_CustomProduct/ConfirmationDeleteAccessory/"+ "@Model.AccessoriesTemplateId",
                cache: false,
                success: function (data) {
                    $("#dialog").empty();
                    $("#dialog").append(data);
                    deleteDialog.dialog("open");
                }
            });
        });

        $('.form-close').on('click', function () {
            var Dialog = $(this).parents('.ui-dialog-content');
            Dialog.dialog('close');
        });    
});
</script>







