@model ECWebApp.WebUI.Areas.Admin.Models.AccessoriesInfo


    <div class="form-horizontal">
        <h4>Accessory Details</h4>
        <a href="#" class="right glyphicon glyphicon-remove form-close"></a>
        <hr />


        <div class="left">
            <div class="card">
                @if (Model.AccessoriesThumbnailBase64 == null)
                {
                    <img id="preview" class="card-img-preview" src="data:image/svg+xml;base64," />
                }
                else
                {
                    <img id="preview" class="card-img-preview" src="@Model.AccessoriesThumbnailBase64" />
                }

                <div class="context context-bar-bottom">
                    @Html.DisplayFor(x => x.AccessoriesImage)
                </div>
            </div>

        </div>

        <div class="right width-77">
            <div class="form-group">
                @Html.LabelFor(model => model.AccessoriesCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccessoriesCode)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccessoriesTemplateName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccessoriesTemplateName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccessoriesTemplatePrice, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccessoriesTemplatePrice)
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccessoriesTemplateCategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(x => x.AccessoriesTemplateCategoryName)
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AccessoriesTemplateDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.AccessoriesTemplateDescription, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <button pid="@Model.AccessoriesTemplateId" class="btn btn-primary accessories-edit left">Edit</button>
                <button pid="@Model.AccessoriesTemplateId" class="btn btn-danger accessories-delete left">Delete</button>
                <div class="col-md-10">
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "right btn btn-default" })
                </div>
            </div>

        </div>
    </div>
<div id="dialog"></div>
<script>
    $(function () {


        var deleteDialog = $("#dialog").dialog({
            autoOpen: false,
            height: 50,
            width: 400,
            modal: true,
            buttons: {
                "Yes": function () {
                    $.ajax({
                        url: "/Admin/Admin_CustomProduct/DeleteAccessory/" + "@Model.AccessoriesTemplateId",
                        cache: false
                    });
                    $(this).dialog('close');
                    
                    
                },
                "No": function () {
                    $(this).dialog('close');
                }
            }
        });

        $('.accessories-edit').on('click', function () {
            var id = $(this).attr('pid');
            $.ajax({
                url: "/Admin/Admin_CustomProduct/EditAccessory/" + id,
